{
  "types": ["uuid"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",               // 根目录设置为当前目录
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",     // 添加这行
    "resolveJsonModule": true,      // 添加这行
    "allowJs": true                 // 添加这行
  },
  "include": [
    "./server/**/*",                // 相对于当前目录的路径
    "./config/**/*"                 // 相对于当前目录的路径
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}


