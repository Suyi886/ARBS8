{
  "name": "payment-system",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev:client": "vite",
    "dev:server": "nodemon --exec ts-node backend/server/index.ts", 
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
