{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",         // 基础路径
    "types": ["node"],       // 支持 Node.js 类型
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,          // 启用严格模式
    "target": "esnext",      // 使用最新的 JavaScript 标准
    "module": "esnext"
  },
  "include": ["server/**/*"], // 假如后端代码在 server 目录下
  "exclude": ["node_modules"]
}
